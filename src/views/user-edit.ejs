<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include ("./partials/head") %>
<body>
    <!-- Header -->
    <%- include ("./partials/header") %>

    <main>
        <!-- Banner -->
        <%- include ("./partials/banner") %>

        <form method="POST" action="/users/update/<%= user.id %>" class="formulario">
            <h3>Editar informacion de <%= user.name %> </h3>
            <label for="name">Nombre:</label>
            <input type="text" id="name" name="name" value=<%= user.name %>>

            <% if (locals.errors && errors.name) { %>
             <div class='text-danger'>
                <%= errors.name.msg   %> 
             </div>
            <% } %>           

            <label for="email">Correo electrónico:</label>
            
            <input type="email" id="email" name="email" value= <%= user.email %>>
            <% if (locals.errors && errors.email) { %>
                <div class='text-danger'>
                   <%= errors.email.msg   %> 
                </div>
               <% } %>

            <label for="password">Contraseña:</label>
            
            <input type="password" id="password" name="password"  value="<%= locals.oldData ? oldData.password : null  %>">
            <% if (locals.errors && errors.password) { %>
                <div class='text-danger'>
                   <%= errors.password.msg   %> 
                </div>
               <% } %>

            <label for="password">Repetir contraseña:</label>
            
            <input type="password" id="password" name="password" value="<%= locals.oldData ? oldData.password : null  %>">
            <% if (locals.errors && errors.password) { %>
                <div class='text-danger'>
                   <%= errors.password.msg   %> 
                </div>
               <% } %>

            <button id="registrarse" action="submit">Guardar</button>

            </div>


        </form>


        
        <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
            <button type="submit" class="botones">ELIMINAR</button>
        </form>


    </main>

    <!-- Footer -->
    <%- include ("./partials/footer") %>
    
</body>
</html>